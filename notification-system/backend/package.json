    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "bcryptjs": "^2.4.3",
    "cockatiel": "^3.2.1",
    "cors": "^2.8.5",
