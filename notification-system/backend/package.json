{
  "name": "notification-system-backend",
  "version": "1.0.0",
  "description": "High-throughput notification system backend",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server1": "PORT=3001 tsx watch src/index.ts",
    "dev:server2": "PORT=3002 tsx watch src/index.ts",
    "dev:server3": "PORT=3003 tsx watch src/index.ts",
    "dev:worker": "tsx watch src/workers/index.ts",
    "start": "tsx src/index.ts",
    "start:worker": "tsx src/workers/index.ts",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "bcryptjs": "^2.4.3",
    "cockatiel": "^3.2.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "ioredis": "^5.4.1",
    "pg": "^8.13.1",
    "pino": "^10.2.0",
    "prom-client": "^15.1.3",
    "uuid": "^11.0.4"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.17.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
