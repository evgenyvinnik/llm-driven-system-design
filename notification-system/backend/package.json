{
  "name": "notification-system-backend",
  "version": "1.0.0",
  "description": "High-throughput notification system backend",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/index.js",
    "dev:server1": "PORT=3001 node --watch src/index.js",
