    "ioredis": "^5.4.1",
    "pg": "^8.13.1",
    "pino": "^10.2.0",
    "prom-client": "^15.1.3",
    "uuid": "^11.0.4"
  },
  "devDependencies": {
    "eslint": "^9.17.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.4.2"
  }
}
