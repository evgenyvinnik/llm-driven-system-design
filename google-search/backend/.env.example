# Server Configuration
PORT=3001
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgres://searchuser:searchpass@localhost:5432/searchdb

# Redis
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Crawler Configuration
CRAWLER_USER_AGENT=SearchBot/1.0 (Educational)
CRAWLER_DELAY_MS=1000
CRAWLER_MAX_CONCURRENT=5
CRAWLER_MAX_PAGES=1000

# Search Configuration
SEARCH_RESULTS_PER_PAGE=10
AUTOCOMPLETE_LIMIT=10
SEARCH_CACHE_TTL=300

# Rate Limiting (requests per window)
RATE_LIMIT_SEARCH_WINDOW_MS=60000
RATE_LIMIT_SEARCH_MAX=60
RATE_LIMIT_AUTOCOMPLETE_WINDOW_MS=60000
RATE_LIMIT_AUTOCOMPLETE_MAX=120
RATE_LIMIT_ADMIN_WINDOW_MS=60000
RATE_LIMIT_ADMIN_MAX=10
RATE_LIMIT_GLOBAL_MAX=200

# Circuit Breaker - Elasticsearch
CB_ES_TIMEOUT=15000
CB_ES_ERROR_THRESHOLD=40
CB_ES_RESET_TIMEOUT=20000

# Circuit Breaker - Redis
CB_REDIS_TIMEOUT=5000
CB_REDIS_ERROR_THRESHOLD=50
CB_REDIS_RESET_TIMEOUT=10000

# Circuit Breaker - PostgreSQL
CB_PG_TIMEOUT=10000
CB_PG_ERROR_THRESHOLD=50
CB_PG_RESET_TIMEOUT=30000

# Idempotency
IDEMPOTENCY_TTL=3600
IDEMPOTENCY_LOCK_TIMEOUT=60
