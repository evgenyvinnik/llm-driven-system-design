{
  "name": "slack",
  "frontendPort": 5173,
  "backendRequired": true,
  "dbName": "slack",
  "dbUser": "slack",
  "auth": {
    "enabled": true,
    "loginUrl": "/login",
    "credentials": {
      "email": "alice@example.com",
      "password": "password123"
    },
    "usernameSelector": "input[name='email'], input[type='email']",
    "passwordSelector": "input[name='password'], input[type='password']",
    "submitSelector": "button[type='submit']",
    "successIndicator": "main, aside, [data-testid='workspace']"
  },
  "screens": [
    {
      "name": "01-login",
      "path": "/login",
      "waitFor": "form",
      "skipAuth": true,
      "delay": 500
    },
    {
      "name": "02-workspace-select",
      "path": "/workspace-select",
      "waitFor": "main",
      "delay": 1000
    },
    {
      "name": "03-workspace",
      "path": "/",
      "waitFor": "main, aside",
      "delay": 1500
    }
  ],
  "viewport": {
    "width": 1440,
    "height": 900
  }
}
