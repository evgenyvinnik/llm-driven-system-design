{
  "name": "discord",
  "frontendPort": 5173,
  "backendRequired": true,
  "backendPort": 3001,
  "dbName": "babydiscord",
  "dbUser": "discord",
  "auth": {
    "enabled": true,
    "loginUrl": "/login",
    "credentials": {
      "username": "alice"
    },
    "usernameSelector": "input#nickname, input[name='nickname'], input[type='text']",
    "submitSelector": "button[type='submit']",
    "successIndicator": ".bg-discord-darker, .bg-discord-channel, aside, main"
  },
  "screens": [
    {
      "name": "01-login",
      "path": "/login",
      "waitFor": "form",
      "skipAuth": true,
      "delay": 500
    },
    {
      "name": "02-home",
      "path": "/channels/@me",
      "waitFor": "main, .text-2xl",
      "delay": 1500
    },
    {
      "name": "03-general-channel",
      "path": "/channels/general",
      "waitFor": ".font-semibold, [class*='MessageList'], .flex-1",
      "delay": 2000
    },
    {
      "name": "04-tech-talk-channel",
      "path": "/channels/tech-talk",
      "waitFor": ".font-semibold",
      "delay": 1500
    },
    {
      "name": "05-gaming-channel",
      "path": "/channels/gaming",
      "waitFor": ".font-semibold",
      "delay": 1500
    },
    {
      "name": "06-random-channel",
      "path": "/channels/random",
      "waitFor": ".font-semibold",
      "delay": 1500
    }
  ],
  "viewport": {
    "width": 1440,
    "height": 900
  }
}
