{
  "name": "discord",
  "frontendPort": 5173,
  "backendRequired": true,
  "dbName": "babydiscord",
  "dbUser": "discord",
  "auth": {
    "enabled": true,
    "loginUrl": "/login",
    "credentials": {
      "username": "alice"
    },
    "usernameSelector": "input#nickname, input[name='nickname'], input[type='text']",
    "submitSelector": "button[type='submit']",
    "successIndicator": ".bg-discord-darker, .bg-discord-channel, aside"
  },
  "screens": [
    {
      "name": "01-login",
      "path": "/login",
      "waitFor": "form",
      "skipAuth": true,
      "delay": 500
    },
    {
      "name": "02-home",
      "path": "/channels/@me",
      "waitFor": "aside, main",
      "delay": 1500
    }
  ],
  "viewport": {
    "width": 1440,
    "height": 900
  }
}
