# Environment
PORT=3000
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgresql://payment_user:payment_pass@localhost:5432/payment_db
PGHOST=localhost
PGPORT=5432
PGUSER=payment_user
PGPASSWORD=payment_pass
PGDATABASE=payment_db

# Redis
REDIS_URL=redis://localhost:6379

# API Configuration
API_KEY_SALT_ROUNDS=10
