{
  "name": "spotify-backend",
  "version": "1.0.0",
  "description": "Spotify-like music streaming backend",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "dev:server1": "PORT=3001 npm run dev",
    "dev:server2": "PORT=3002 npm run dev",
    "dev:server3": "PORT=3003 npm run dev",
    "dev:worker": "NODE_ENV=development tsx watch src/workers/analytics-worker.ts",
    "dev:worker1": "WORKER_ID=1 npm run dev:worker",
    "dev:worker2": "WORKER_ID=2 npm run dev:worker",
    "start": "NODE_ENV=production tsx src/index.ts",
    "start:worker": "NODE_ENV=production tsx src/workers/analytics-worker.ts",
    "seed": "tsx src/seed.ts",
    "migrate": "tsx src/migrate.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-redis": "^8.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "kafkajs": "^2.2.4",
    "minio": "^8.0.2",
    "pg": "^8.13.1",
    "pino": "^10.2.0",
    "prom-client": "^15.1.3",
    "redis": "^4.7.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.17.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
