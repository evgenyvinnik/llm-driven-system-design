# Database
DATABASE_URL=postgresql://twitter:twitter_secret@localhost:5432/twitter_db

# Redis
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=twitter-backend

# Session
SESSION_SECRET=twitter-session-secret-change-in-production

# Server
PORT=3001
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Celebrity threshold (followers)
CELEBRITY_THRESHOLD=10000

# Timeline cache settings
TIMELINE_CACHE_SIZE=800
TIMELINE_CACHE_TTL_SECONDS=604800

# Trend bucket settings
TREND_BUCKET_TTL_SECONDS=7200

# Idempotency settings
IDEMPOTENCY_TTL_SECONDS=86400

# Retention settings
TWEET_SOFT_DELETE_RETENTION_DAYS=30
TWEET_ARCHIVE_AFTER_DAYS=0
HASHTAG_ACTIVITY_RETENTION_DAYS=90
HASHTAG_AGGREGATE_AFTER_DAYS=7
ACTIVITY_LOG_RETENTION_DAYS=365
SESSION_TTL_SECONDS=604800

# Archival settings (disabled by default for local development)
ARCHIVAL_ENABLED=false
ARCHIVE_BUCKET=twitter-archives
ARCHIVE_PREFIX=archives/
ARCHIVE_BATCH_SIZE=10000

# Cleanup job settings
CLEANUP_INTERVAL_HOURS=24
CLEANUP_BATCH_SIZE=1000
CLEANUP_MAX_DURATION_SECONDS=300

# Worker settings
FANOUT_CONSUMER_GROUP=fanout-workers
TRENDING_CONSUMER_GROUP=trending-workers
