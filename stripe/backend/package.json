{
  "name": "stripe-backend",
  "version": "1.0.0",
  "description": "Stripe-like payment processing backend",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "dev:server1": "PORT=3001 npm run dev",
    "dev:server2": "PORT=3002 npm run dev",
    "dev:server3": "PORT=3003 npm run dev",
    "start": "NODE_ENV=production tsx src/index.ts",
    "db:init": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "stripe",
    "payments",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bullmq": "^5.1.1",
    "cockatiel": "^3.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.18.2"
  }
}
