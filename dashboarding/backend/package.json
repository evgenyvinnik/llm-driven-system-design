{
  "name": "dashboarding-backend",
  "version": "1.0.0",
  "description": "Metrics monitoring and visualization backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server1": "PORT=3001 tsx watch src/index.ts",
    "dev:server2": "PORT=3002 tsx watch src/index.ts",
    "dev:server3": "PORT=3003 tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.21.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "pg": "^8.12.0",
    "ioredis": "^5.4.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "express-session": "^1.18.0",
    "connect-redis": "^7.1.1",
    "bcrypt": "^5.1.1",
    "pino": "^9.3.2",
    "pino-http": "^10.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "@types/express-session": "^1.18.0",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.5.0",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "eslint": "^9.9.0",
    "@typescript-eslint/parser": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0"
  }
}
