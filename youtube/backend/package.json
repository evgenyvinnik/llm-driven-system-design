{
  "name": "youtube-backend",
  "version": "1.0.0",
  "description": "YouTube-like video platform backend",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server1": "PORT=3001 tsx watch src/index.ts",
    "dev:server2": "PORT=3002 tsx watch src/index.ts",
    "dev:server3": "PORT=3003 tsx watch src/index.ts",
    "dev:worker": "tsx watch src/workers/transcode-worker.ts",
    "dev:worker1": "WORKER_ID=1 tsx watch src/workers/transcode-worker.ts",
    "dev:worker2": "WORKER_ID=2 tsx watch src/workers/transcode-worker.ts",
    "start": "tsx src/index.ts",
    "start:worker": "tsx src/workers/transcode-worker.ts",
    "migrate": "tsx migrations/run.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/lib-storage": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "amqplib": "^0.10.9",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "ioredis": "^5.4.1",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.7",
    "opossum": "^9.0.0",
    "pg": "^8.13.0",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^9.0.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/amqplib": "^0.10.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.0",
    "@types/opossum": "^8.1.9",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.15.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.18.2"
  }
}
